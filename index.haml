@import (
)

@package: rss

@data_type []*Feed

%html
  %head
    %title Feed listing
  %body
    %style
      body {
        font-family: Helvetica, Arial, sans-serif;
        background: #ddd
      }
      \#content {
        width: 80%;
        background: #fff;
        border-color: #333;
        margin: 20px;
        padding: 10px;
        \-webkit-border-radius: 10px;
        \-moz-border-radius: 10px;
        border-radius: 10px;
      }
      pre, code {
          font-family: Menlo, monospace;
          font-size: 14px;
      }
      pre {
          line-height: 18px;
      }
    #content

      %h1 Feeds

      %ul
        - for _, feed := range data {
          %li= "<a href='/feed/", feed.Id, "'>", feed.Title, "</a>"
        - }
