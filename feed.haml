@import (
)

@package: rss

@data_type *EntryList

%html
  %head
    %title= data.feed.Title
  %body
    %style
      body {
        font-family: Helvetica, Arial, sans-serif;
        background: #ddd
      }
      \#content {
        width: 80%;
        background: #fff;
        border-color: #333;
        margin: 20px;
        padding: 10px;
        \-webkit-border-radius: 10px;
        \-moz-border-radius: 10px;
        border-radius: 10px;
      }
      pre, code {
          font-family: Menlo, monospace;
          font-size: 14px;
      }
      pre {
          line-height: 18px;
      }
    #content

      %h1= data.feed.Title

      %h3= data.feed.Subtitle

      %div
        - for _, entry := range data.entries {
          
          %h3= entry.Title

          %p= entry.Subtitle

          %p= entry.Summary

          %p= "<a href='", entry.Link, "'>Full article</a>"
          - if entry.Url != "" {
            %p= "<a href='", entry.Url, "'>Download</a>"
          - }
        - }
